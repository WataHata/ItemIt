<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="com.example.demo.RegisterForm"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          styleClass="root">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Text text="Registration"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2" GridPane.halignment="CENTER">
        <font>
            <Font name="Tahoma" size="20"/>
        </font>
    </Text>

    <Label text="Username:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="usernameField"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordField"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Phone Number:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="phoneNumberField"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Address:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextArea fx:id="addressArea"
              GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Role:"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <VBox fx:id="radioButtonContainer" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <fx:define>
            <ToggleGroup fx:id="roleGroup"/>
        </fx:define>
    </VBox>

    <HBox spacing="10" alignment="bottom_right" 
          GridPane.columnIndex="1" GridPane.rowIndex="6">
        <Button text="Register"
                onAction="#handleRegisterButtonAction"/>
    </HBox>

    <Text fx:id="messageText"
          GridPane.columnIndex="1" GridPane.rowIndex="7"/>
</GridPane>
